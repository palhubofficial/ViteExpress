{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "module": "CommonJS",
    "skipLibCheck": true,
    "lib": [
      "esnext"
    ],
    "types": [
      "@types/node"
    ],
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ]
}